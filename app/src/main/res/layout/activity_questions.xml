        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView style="@style/Card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
