                        <RadioButton
                            style="@style/Answer"
                            android:text="@string/answer_q5_a2" />


                        <RadioButton
                            style="@style/Answer"
                            android:text="@string/answer_q5_a3" />

                        <RadioButton
                            style="@style/Answer"
                            android:text="@string/answer_q5_a4" />

                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/confirme_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/submit_button"
            android:onClick="changeSceneq"
            android:textColor="@android:color/white"
            android:layout_marginBottom="@dimen/bottom_button_space"/>

    </LinearLayout>

</ScrollView>